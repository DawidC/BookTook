<Window x:Class="BookTook.EditUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookTook"
        mc:Ignorable="d"
        Title="Edytuj użytkownika" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="59*"/>
            <ColumnDefinition Width="87*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="labelimie" Content="Imię" HorizontalAlignment="Left" Margin="26,34,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.068,-0.436"/>
        <Label x:Name="labelnazwisko" Content="Nazwisko" HorizontalAlignment="Left" Margin="26,65,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelemail" Content="Email" HorizontalAlignment="Left" Margin="26,96,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labeltelefon" Content="Telefon" HorizontalAlignment="Left" Margin="26,127,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labeltypkonta" Content="Typ konta" HorizontalAlignment="Left" Margin="26,158,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoximie" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="0,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxnazwisko" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="0,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxemail" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="0,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxtelefon" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="0,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="comboBoxtypkonta" Grid.Column="1" HorizontalAlignment="Left" Margin="0,162,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Uczeń" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Nauczyciel" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <Button x:Name="button_zapisz" Content="Zapisz" HorizontalAlignment="Left" Margin="26,224,0,0" VerticalAlignment="Top" Width="75" Click="button_zapisz_Click"/>
        <Button x:Name="button_usun" Content="Usuń" Grid.Column="1" HorizontalAlignment="Left" Margin="71,224,0,0" VerticalAlignment="Top" Width="75" Click="button_usun_Click"/>

    </Grid>
</Window>
